            --system-red: #ff0000;
            --system-green: #00ff00;
            --system-blue: #0000ff;
            --system-yellow: #ffff00;
            --text-glow: 0 0 10px;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Courier New', monospace;
        }
        
        body {
            background: var(--dark-bg);
            color: white;
            min-height: 100vh;
            overflow-x: hidden;
        }
        
        .app-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
        }
        
        /* Header */
        .header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--system-purple);
        }
        
        .app-title {
            font-size: 28px;
            font-weight: bold;
            color: white;
            text-shadow: var(--text-glow) var(--system-purple);
            margin-bottom: 10px;
        }
        
        .system-status {
            display: inline-block;
            padding: 5px 15px;
            background: black;
            border: 1px solid var(--system-purple);
            color: var(--system-purple);
            font-size: 14px;
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        
        /* Day Info */
        .day-info {
            display: flex;
            justify-content: space-between;
            background: rgba(138, 43, 226, 0.1);
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            border: 1px solid var(--system-purple);
        }
        
        .rank-display {
            text-align: center;
            background: rgba(0,0,0,0.8);
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            border: 2px solid currentColor;
        }
        
        .rank-e { color: #808080; }
        .rank-d { color: #1E90FF; }
        .rank-c { color: #32CD32; }
        .rank-b { color: #FFD700; }
        .rank-a { color: #FF4500; }
        .rank-s { color: #8A2BE2; }
        
        /* Progress Ring */
        .progress-container {
            position: relative;
            width: 250px;
            height: 250px;
            margin: 0 auto 30px;
        }
        
        .progress-ring {
            transform: rotate(-90deg);
        }
        
        .progress-ring-bg {
            fill: none;
            stroke: rgba(255,255,255,0.1);
            stroke-width: 15;
        }
        
        .progress-segment {
            fill: none;
            stroke-width: 15;
            stroke-linecap: round;
            transition: stroke-dashoffset 0.5s;
        }
        
        .segment-1 { stroke: var(--system-red); }
        .segment-2 { stroke: var(--system-green); }
        .segment-3 { stroke: var(--system-blue); }
        .segment-4 { stroke: var(--system-yellow); }
        
        .progress-center {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }
        
        /* Tasks */
        .task-list {
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .task-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .task-item:last-child {
            border-bottom: none;
        }
        
        .task-controls button {
            padding: 5px 12px;
            margin-left: 5px;
            background: var(--system-purple);
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
        }
        
        .task-controls button:hover {
            opacity: 0.8;
        }
        
        /* Timer */
        .timer {
            background: rgba(255,0,0,0.2);
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 20px;
            border: 1px solid var(--system-red);
        }
        
        .time-remaining {
            font-size: 32px;
            font-family: monospace;
            color: var(--system-red);
            margin: 10px 0;
        }
        
        /* AI Terminal */
        .ai-terminal {
            background: black;
            border: 2px solid var(--system-purple);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            min-height: 150px;
            max-height: 200px;
            overflow-y: auto;
        }
        
        .system-message {
            color: var(--system-purple);
            margin-bottom: 10px;
        }
        
        .user-message {
            color: white;
            margin-bottom: 10px;
            text-align: right;
        }
        
        /* Buttons */
        .complete-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(45deg, var(--system-purple), #4b0082);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .complete-btn:hover {
            background: linear-gradient(45deg, #9b30ff, #5a009c);
        }
        
        .penalty-warning {
            background: rgba(255,0,0,0.3);
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            border-left: 5px solid var(--system-red);
            display: none;
        }
        
        /* Responsive */
        @media (max-width: 500px) {
            .app-container {
                padding: 10px;
            }
            
            .progress-container {
                width: 200px;
                height: 200px;
            }
        }
    </style>
